{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    ".idea",
    "views"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": ""
  },
  "watch": [
    "server/*",
    "bin/*"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js"
}
